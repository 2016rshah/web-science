{
    "manifest_version": 2,
    "name": "Data",
    "version": "1.0",

    "description": "Collect specified browsing information",
    "icons": {
        "48": "icons/eye-48.png"
    },

    "options_ui": {
        "page": "settings/options.html"
    },

    "background": {
        "scripts": [
            "scripts/consent.js",
            "scripts/lib/localforage.min.js",
            "scripts/startup.js",
            "scripts/lib/utils.js",
            "scripts/collection.js",
            "scripts/background-listener.js"
        ]
      },
      "browser_action": {
        "default_title": "Download data"
    },
    "content_scripts": [
    {
        "matches": [
            "<all_urls>"
        ],
        "js": [
            "scripts/lib/jquery.js",
            "scripts/lib/jquery-ui.js",
            "scripts/newsLinks.js",
            "scripts/process.js"
        ]
    }
    ],
    "permissions": [
        "<all_urls>",
        "notifications",
        "tabs",
        "storage",
        "downloads"
    ],

    "browser_specific_settings": {
        "gecko": {
            "id": "collect@example.com"
        }
    }

}
