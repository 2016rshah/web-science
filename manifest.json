{
    "manifest_version": 2,
    "name": "Data",
    "version": "1.0",

    "description": "Collect specified browsing information",
    "icons": {
        "48": "icons/eye-48.png"
    },

    "options_ui": {
        "page": "settings/options.html"
    },
    "background": {
        "scripts": ["scripts/localforage.min.js", "scripts/utils.js", "scripts/background-listener.js"]
      },
      "browser_action": {
        "default_title": "Favourite colour option"
    },
    "content_scripts": [
    {

        "matches": [
            "<all_urls>"
        ],
        "js": [
            "scripts/jquery.js",
            "scripts/jquery-ui.js",
            "scripts/newsLinks.js",
            "scripts/process.js"
        ]
    }
    ],
    "permissions": [
        "<all_urls>",
        "notifications",
        "tabs",
        "storage",
        "downloads"
    ],


    "browser_specific_settings": {
        "gecko": {
            "id": "collect@example.com"
        }
    }

}
