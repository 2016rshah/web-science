{
    "manifest_version": 2,
    "name": "Data",
    "version": "1.0",

    "description": "Collect specified browsing information",
    "icons": {
        "48": "icons/eye-48.png"
    },

    "options_ui": {
        "page": "settings/options.html"
    },
    "content_scripts": [
    {
	    "matches": ["https://developer.mozilla.org/*",
                    "https://www.nytimes.com/*",
                    "https://www.ft.com/*"],
	    "js": ["scripts/jquery.js", "scripts/inspect.js"]
    }
    ],
    "permissions": [
        "<all_urls>",
        "tabs",
        "storage"
    ],

    "background": {
        "scripts": ["scripts/consent.js", "scripts/localforage.min.js", "scripts/collection.js"]
    },

    "browser_specific_settings": {
        "gecko": {
            "id": "collect@example.com"
        }
    }

}
